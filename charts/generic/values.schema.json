{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "labels": {
          "type": "object"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "generic": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "workload": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["deployment", "statefulset", "daemonset", "job", "cronjob"]
        },
        "enabled": {
          "type": "boolean"
        },
        "replicas": {
          "type": "integer",
          "minimum": 0
        },
        "revisionHistoryLimit": {
          "type": "integer",
          "minimum": 0
        },
        "strategy": {
          "type": "object"
        },
        "progressDeadlineSeconds": {
          "type": "integer",
          "minimum": 0
        },
        "serviceName": {
          "type": "string"
        },
        "podManagementPolicy": {
          "type": "string",
          "enum": ["OrderedReady", "Parallel"]
        },
        "updateStrategy": {
          "type": "object"
        },
        "volumeClaimTemplates": {
          "type": "object"
        },
        "backoffLimit": {
          "type": "integer",
          "minimum": 0
        },
        "completions": {
          "type": "integer",
          "minimum": 1
        },
        "parallelism": {
          "type": "integer",
          "minimum": 1
        },
        "ttlSecondsAfterFinished": {
          "type": "integer",
          "minimum": 0
        },
        "restartPolicy": {
          "type": "string",
          "enum": ["Always", "OnFailure", "Never"]
        },
        "schedule": {
          "type": "string",
          "pattern": "^(@(annually|yearly|monthly|weekly|daily|hourly|reboot))|(@every (\\d+(ns|us|Âµs|ms|s|m|h))+)|((((\\d+,)+\\d+|(\\d+(\\/|-)\\d+)|\\d+|\\*) ?){5,7})$"
        },
        "concurrencyPolicy": {
          "type": "string",
          "enum": ["Allow", "Forbid", "Replace"]
        },
        "successfulJobsHistoryLimit": {
          "type": "integer",
          "minimum": 0
        },
        "failedJobsHistoryLimit": {
          "type": "integer",
          "minimum": 0
        },
        "startingDeadlineSeconds": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "namespaceOverride": {
      "type": "string"
    },
    "workloadLabels": {
      "type": "object"
    },
    "workloadAnnotations": {
      "type": "object"
    },
    "podLabels": {
      "type": "object"
    },
    "podAnnotations": {
      "type": "object"
    },
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    "deployment": {
      "type": "object"
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0
        },
        "runAsGroup": {
          "type": "integer",
          "minimum": 0
        },
        "fsGroup": {
          "type": "integer",
          "minimum": 0
        },
        "fsGroupChangePolicy": {
          "type": "string",
          "enum": ["OnRootMismatch", "Always"]
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RuntimeDefault", "Unconfined", "Localhost"]
            }
          }
        }
      }
    },
    "containerSecurityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean"
        },
        "runAsUser": {
          "type": "integer",
          "minimum": 0
        },
        "allowPrivilegeEscalation": {
          "type": "boolean"
        },
        "readOnlyRootFilesystem": {
          "type": "boolean"
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "add": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "security": {
      "type": "object"
    },
    "containers": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "initContainers": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "sidecars": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "containerPatterns": {
      "type": "object",
      "properties": {
        "adapter": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "containers": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "ambassador": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "containers": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "sidecar": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "containers": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "init": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "containers": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "debug": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "containers": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "containerPorts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "containerPort": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "protocol": {
            "type": "string",
            "enum": ["TCP", "UDP", "SCTP"]
          }
        }
      }
    },
    "hostNetwork": {
      "type": "boolean"
    },
    "hostPID": {
      "type": "boolean"
    },
    "hostIPC": {
      "type": "boolean"
    },
    "hostname": {
      "type": "string"
    },
    "dnsPolicy": {
      "type": "string"
    },
    "dnsConfig": {
      "type": "object"
    },
    "priorityClassName": {
      "type": "string"
    },
    "priority": {
      "type": ["integer", "null"]
    },
    "runtimeClassName": {
      "type": "string"
    },
    "schedulerName": {
      "type": "string"
    },
    "terminationGracePeriodSeconds": {
      "type": "integer",
      "minimum": 0
    },
    "activeDeadlineSeconds": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "restartPolicy": {
      "type": ["string", "null"],
      "enum": ["Always", "OnFailure", "Never", null]
    },
    "commonEnvVars": {
      "type": "boolean"
    },
    "env": {
      "type": "array"
    },
    "envFrom": {
      "type": "array"
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    },
    "topologySpreadConstraints": {
      "type": "array"
    },
    "service": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"]
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "targetPort": {
                "type": ["integer", "string"]
              },
              "nodePort": {
                "type": "integer",
                "minimum": 30000,
                "maximum": 32767
              },
              "protocol": {
                "type": "string",
                "enum": ["TCP", "UDP", "SCTP"]
              }
            }
          }
        },
        "clusterIP": {
          "type": "string"
        },
        "loadBalancerIP": {
          "type": "string"
        },
        "loadBalancerSourceRanges": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "externalTrafficPolicy": {
          "type": ["string", "null"],
          "enum": ["Cluster", "Local", null]
        },
        "sessionAffinity": {
          "type": ["string", "null"],
          "enum": ["None", "ClientIP", null]
        },
        "publishNotReadyAddresses": {
          "type": "boolean"
        }
      }
    },
    "additionalServices": {
      "type": "object"
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string"
        },
        "controller": {
          "type": "string",
          "enum": ["", "alb", "nginx"],
          "description": "Ingress controller type (default: alb)"
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string",
                      "enum": ["ImplementationSpecific", "Exact", "Prefix"]
                    }
                  }
                }
              }
            }
          }
        },
        "tls": {
          "type": "array"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        },
        "labels": {
          "type": "object"
        },
        "automountServiceAccountToken": {
          "type": "boolean"
        }
      }
    },
    "rbac": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "enum": ["Role", "ClusterRole"]
        },
        "rules": {
          "type": "array"
        }
      }
    },
    "configMap": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "data": {
          "type": "object"
        },
        "binaryData": {
          "type": "object"
        }
      }
    },
    "secret": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "type": {
          "type": "string"
        },
        "data": {
          "type": "object"
        },
        "stringData": {
          "type": "object"
        }
      }
    },
    "extraConfigMaps": {
      "type": "object"
    },
    "extraSecrets": {
      "type": "object"
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany"]
        },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(\\.[0-9]+)?(Mi|Gi|Ti|Pi|Ei|Ki|M|G|T|P|E|K)?$"
        },
        "storageClass": {
          "type": "string"
        },
        "volumeClaimTemplate": {
          "type": "boolean"
        },
        "volumes": {
          "type": "object"
        }
      }
    },
    "emptyDirVolumes": {
      "type": "object"
    },
    "hostPathVolumes": {
      "type": "object"
    },
    "extraVolumes": {
      "type": "array"
    },
    "extraVolumeMounts": {
      "type": "array"
    },
    "hostAliases": {
      "type": "array"
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1
        },
        "metrics": {
          "type": "array"
        }
      }
    },
    "vpa": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "updateMode": {
          "type": "string",
          "enum": ["Off", "Initial", "Recreate", "Auto"]
        }
      }
    },
    "keda": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "pollingInterval": {
          "type": "integer",
          "minimum": 1
        },
        "cooldownPeriod": {
          "type": "integer",
          "minimum": 0
        },
        "minReplicaCount": {
          "type": "integer",
          "minimum": 0
        },
        "maxReplicaCount": {
          "type": "integer",
          "minimum": 1
        },
        "triggers": {
          "type": "array"
        }
      }
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "minAvailable": {
          "type": ["integer", "string"]
        },
        "maxUnavailable": {
          "type": ["integer", "string"]
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "policyTypes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Ingress", "Egress"]
          }
        },
        "ingress": {
          "type": "array"
        },
        "egress": {
          "type": "array"
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "interval": {
          "type": "string",
          "pattern": "^[0-9]+(ms|s|m|h)$"
        },
        "scrapeTimeout": {
          "type": "string",
          "pattern": "^[0-9]+(ms|s|m|h)$"
        },
        "path": {
          "type": "string"
        },
        "port": {
          "type": "string"
        }
      }
    },
    "podMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "interval": {
          "type": "string",
          "pattern": "^[0-9]+(ms|s|m|h)$"
        },
        "scrapeTimeout": {
          "type": "string",
          "pattern": "^[0-9]+(ms|s|m|h)$"
        },
        "path": {
          "type": "string"
        },
        "port": {
          "type": "string"
        },
        "scheme": {
          "type": "string",
          "enum": ["http", "https"]
        },
        "tlsConfig": {
          "type": "object"
        },
        "relabelings": {
          "type": "array"
        },
        "metricRelabelings": {
          "type": "array"
        },
        "labels": {
          "type": "object"
        },
        "annotations": {
          "type": "object"
        },
        "jobLabel": {
          "type": "string"
        },
        "targetLabels": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "podTargetLabels": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sampleLimit": {
          "type": "integer",
          "minimum": 0
        },
        "targetLimit": {
          "type": "integer",
          "minimum": 0
        },
        "labelLimit": {
          "type": "integer",
          "minimum": 0
        },
        "labelNameLengthLimit": {
          "type": "integer",
          "minimum": 0
        },
        "labelValueLengthLimit": {
          "type": "integer",
          "minimum": 0
        },
        "namespaceSelector": {
          "type": "object"
        },
        "selector": {
          "type": "object"
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object"
          }
        },
        "additionalMonitors": {
          "type": "object"
        }
      }
    },
    "prometheusRule": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "labels": {
          "type": "object"
        },
        "annotations": {
          "type": "object"
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "rules"],
            "properties": {
              "name": {
                "type": "string"
              },
              "interval": {
                "type": "string",
                "pattern": "^[0-9]+(ms|s|m|h)$"
              },
              "limit": {
                "type": "integer",
                "minimum": 0
              },
              "partialResponseStrategy": {
                "type": "string"
              },
              "rules": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["expr"],
                  "properties": {
                    "alert": {
                      "type": "string"
                    },
                    "record": {
                      "type": "string"
                    },
                    "expr": {
                      "type": "string"
                    },
                    "for": {
                      "type": "string",
                      "pattern": "^[0-9]+(ms|s|m|h)$"
                    },
                    "labels": {
                      "type": "object"
                    },
                    "annotations": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        },
        "additionalRules": {
          "type": "object"
        }
      }
    },
    "gateway": {
      "type": "object",
      "properties": {
        "gatewayClass": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            },
            "controllerName": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "labels": {
              "type": "object"
            },
            "annotations": {
              "type": "object"
            },
            "parametersRef": {
              "type": "object"
            },
            "additionalClasses": {
              "type": "object"
            }
          }
        },
        "gateway": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "name": {
              "type": "string"
            },
            "gatewayClassName": {
              "type": "string"
            },
            "labels": {
              "type": "object"
            },
            "annotations": {
              "type": "object"
            },
            "addresses": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["IPAddress", "Hostname"]
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["value"]
              }
            },
            "listeners": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "hostname": {
                    "type": "string"
                  },
                  "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                  },
                  "protocol": {
                    "type": "string",
                    "enum": ["HTTP", "HTTPS", "TLS", "TCP", "UDP"]
                  },
                  "tls": {
                    "type": "object"
                  },
                  "allowedRoutes": {
                    "type": "object"
                  }
                },
                "required": ["name", "port"]
              }
            },
            "tls": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "mode": {
                  "type": "string",
                  "enum": ["Terminate", "Passthrough"]
                },
                "certificateRefs": {
                  "type": "array"
                }
              }
            },
            "additionalGateways": {
              "type": "object"
            }
          }
        },
        "httpRoute": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "labels": {
              "type": "object"
            },
            "annotations": {
              "type": "object"
            },
            "gatewayName": {
              "type": "string"
            },
            "gatewayNamespace": {
              "type": "string"
            },
            "parentRefs": {
              "type": "array"
            },
            "hostnames": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "rules": {
              "type": "array"
            },
            "additionalRoutes": {
              "type": "object"
            }
          }
        },
        "tcpRoute": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "labels": {
              "type": "object"
            },
            "annotations": {
              "type": "object"
            },
            "gatewayName": {
              "type": "string"
            },
            "gatewayNamespace": {
              "type": "string"
            },
            "parentRefs": {
              "type": "array"
            },
            "rules": {
              "type": "array"
            },
            "additionalRoutes": {
              "type": "object"
            }
          }
        },
        "referenceGrant": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "labels": {
              "type": "object"
            },
            "annotations": {
              "type": "object"
            },
            "from": {
              "type": "array"
            },
            "to": {
              "type": "array"
            },
            "additionalGrants": {
              "type": "object"
            }
          }
        }
      }
    },
    "extraObjects": {
      "type": "array"
    }
  }
}
